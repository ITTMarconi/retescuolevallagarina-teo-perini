<style>
  header {
    width: 100%;
    height: 3rem;

    background-color: var(--background-primary);

    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
  }

  /* header:first-child {
    padding-left: .8rem;
  }
  header:last-child {
    padding-right: .8rem;
  } */

  header > span {
    width: 40px;
    height: 40px;

    background-color: white;
    color: var(--tint-orange);
  }

  a:hover span {
    color: var(--tint-orange);
  }

  header > nav {
    display: flex;
    gap: 0.6rem;
  }
</style>