---
import "../styles/common.css";

const { ...rest } = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font link by Adobe Fonts -->
    <!-- <link rel="stylesheet" href="https://use.typekit.net/nmt0aht.css" /> -->
    <link rel="stylesheet" href="https://use.typekit.net/mvd0fve.css" />
    <!-- Font link by Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Host+Grotesk:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <!-- Icon link by Google Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- Icons bundle -->
    <link rel="mask-icon" color="#5bbad5" href="/safari-pinned-tab.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <title>Direzione futuro</title>
  </head>
  <body {...rest}>
    
    <div>
      <slot />
    </div>

      <footer> Made with &lt;3 & HTML </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
  }

  html {
    width: 100%;

    height: 100%;
    height: 100svh;

    overflow-x: hidden;
  }

  body {
    width: 100%;
    height: 100%;
    
    background-color: var(--foreground-primary);
  
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  body > div {
    width: 100%;
    flex-basis: 100%;
  }
  
  footer {
    width: 100%;

    padding: 0.5rem 0;
    text-align: center;
    color: var(--background-secondary);
    background-color: var(--background-primary);
    cursor:default;
  }
</style>
