---
import Icon from '../components/Icon.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/common.css';
---

<Layout>
    <main>
        <h1 class="font-bold">DIREZIONE <br /> FUTURO</h1>

        <nav>
            <a href="/istituti">
                <Icon code="e7ee" color="var(--foreground-secondary)" />
                <span class="font-light">Istituti</span>
            </a>
            <a href="/openday">
                <Icon code="ebcc" color="var(--foreground-secondary)" />
                <span class="font-light">Open Days</span>
            </a>
            <a href="/map">
                <Icon code="e55b" color="var(--foreground-secondary)" />
                <span class="font-light">Mappa scuole</span>
            </a>
        </nav>
    </main>
</Layout>

<style>
    body {
        background-color: var(--background-primary);
    }

    main {
        height: calc(100% - 2.4rem);
        padding: 1.2rem 1rem;
    }

    h1 {
        height: 25%;
        font-size: 3rem;
        text-align: center;
        color: var(--foreground-primary);
    }

    nav {
        width: 100%;
        height: 75%;

        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;

        flex-direction: column;
        gap: 1em 4em;
    }

    a {
        text-align: center;
        margin: 0.5rem;

        display: flex;
        flex-direction: column;
        text-decoration-line: unset;
    }

    a:hover span {
        color: var(--tint-orange);
    }

    span:first-child {
        font-size: 6rem;
        color: var(--foreground-secondary);
    }
    span:last-child {
        font-size: 1.3rem;
        text-transform: capitalize;
        font-weight: 500;
        color: var(--foreground-secondary);
    }

    /* For tablets: */
    @media only screen and (min-width: 600px) {
        h1 {
            font-size: 4.5rem;
        }
        span:first-child {
            font-size: 9rem;
        }

        nav {
            flex-direction: row;
        }
    }

    /* For desktop: */
    @media only screen and (min-width: 768px) {
        h1 {
            font-size: 4.5rem;
        }
        span:first-child {
            font-size: 10rem;
        }
        nav {
            flex-direction: row;
        }
    }
</style>
