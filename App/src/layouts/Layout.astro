---
import '../styles/common.css';

const { ...rest } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font link by Adobe Fonts -->
    <link rel="stylesheet" href="https://use.typekit.net/nmt0aht.css" />

    <!-- Icon link by Google Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <title>Test</title>
  </head>
  <body {...rest}>
    <slot />
  </body>
</html>

<style>

html,
body {
    margin: 0;
    padding: 0;
}

html {
    width: 100vw;
    height: 100vh;

    overflow-x: hidden;
}

body {
    width: 100%;
    width: 100svw;

    height: 100%;
    height: 100svh;

    background-color: var(--foreground-primary);
}
</style>