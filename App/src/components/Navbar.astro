import Icon from "./Icon.astro";
---

<header>
    <span>Icon</span>

    <nav>
      <a href="/istituti">
        <Icon code="e7ee" color="var(--foreground-secondary)" icon_size="2.2rem" />
      </a>
      <a href="/openday">
        <Icon code="ebcc" color="var(--foreground-secondary)" icon_size="2.2rem" />
      </a>
      <a href="/map">
        <Icon code="e0c8" color="var(--foreground-secondary)" icon_size="2.2rem" />
      </a>
      <a href="">
        <Icon code="e887" color="var(--foreground-secondary)" icon_size="2.2rem" />
